<% content_for :title, "Users" %>

<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success text-center"><%= notice %></div>
  <% end %>

  <p>
    <%= link_to "Back to Home", root_path, class: "btn btn-link" %>
  </p>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>All Users</h2>
    <%= link_to "New User", new_user_path, class: "btn btn-success" %>
  </div>

  <div class="list-group">
    <% @users.each do |user| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <span><%= render user %></span>
        <%= link_to "Show", user, class: "btn btn-sm btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>

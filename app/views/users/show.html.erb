<% if notice %>
  <div class="alert alert-success text-center"><%= notice %></div>
<% end %>

<div class="container mt-5">
  <div class="card shadow p-4">
    <h2 class="text-center mb-4">User Profile</h2>
    <%= render @user %>

    <div class="d-flex justify-content-center gap-3 mt-4">
      <%= link_to "Edit User", edit_user_path(@user), class: "btn btn-primary" %>
      <%= link_to "Back to Users", users_path, class: "btn btn-outline-secondary" %>
      <%= button_to "Delete User", @user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
